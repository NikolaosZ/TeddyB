<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ted.tedparent.BearRegActivity"
    tools:showIn="@layout/activity_bear_reg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Bear"
        android:onClick="regBearClick"
        android:id="@+id/BearRegButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bearIDtxtBox"
        android:layout_above="@+id/BearRegButton"
        android:layout_alignLeft="@+id/BearRegButton"
        android:layout_alignStart="@+id/BearRegButton"
        android:layout_alignRight="@+id/BearRegButton"
        android:layout_alignEnd="@+id/BearRegButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Bear ID"
        android:id="@+id/BearIDtxtView"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
